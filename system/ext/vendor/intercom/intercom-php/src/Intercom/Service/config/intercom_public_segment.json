{
    "name": "Intercom API (Segment)",
    "description": "The Intercom API (Segment)",
    "operations": {
        "getSegments": {
            "extends": "_abstract_pagination_page",
            "httpMethod": "GET",
            "responseClass": "SegmentListModel",
            "responseType": "model",
            "summary": "Get a list of segments",
            "uri": "/segments"
        },
        "getSegment": {
            "httpMethod": "GET",
            "parameters": {
                "id": {
                    "location": "uri",
                    "required": true,
                    "type": "string"
                }
            },
            "responseClass": "SegmentModel",
            "responseType": "model",
            "summary": "Gets a segment by ID",
            "uri": "/segments/{id}"
        }
    },
    "models": {
        "SegmentModel": {
            "type": "object",
            "properties": {
                "id": {
                    "location": "json",
                    "type": "string"
                },
                "name": {
                    "location": "json",
                    "type": "string"
                },
                "created_at": {
                    "location": "json",
                    "type": "integer",
                    "format": "timestamp"
                },
                "updated_at": {
                    "location": "json",
                    "type": "integer",
                    "format": "timestamp"
                },
                "x_rate_limit": {
                    "location": "header",
                    "sentAs": "X-RateLimit-Limit",
                    "type": "integer"
                },
                "x_rate_remaining": {
                    "location": "header",
                    "sentAs": "X-RateLimit-Remaining",
                    "type": "integer"
                },
                "x_rate_reset": {
                    "location": "header",
                    "sentAs": "X-RateLimit-Reset",
                    "type": "integer"
                }
            }
        },
        "SegmentListModel": {
            "type": "object",
            "properties": {
                "segments": {
                    "location": "json",
                    "type": "array",
                    "items": {
                        "$ref": "SegmentModel"
                    }
                },
                "x_rate_limit": {
                    "location": "header",
                    "sentAs": "X-RateLimit-Limit",
                    "type": "integer"
                },
                "x_rate_remaining": {
                    "location": "header",
                    "sentAs": "X-RateLimit-Remaining",
                    "type": "integer"
                },
                "x_rate_reset": {
                    "location": "header",
                    "sentAs": "X-RateLimit-Reset",
                    "type": "integer"
                }
            }
        }
    }
}
